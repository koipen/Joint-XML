<?xml version="1.0"?>
<map proto="1.3.3">
<name>Combat Isles</name>
<version>1.0.0</version>
<objective>Destroy the enemy monument!</objective>
<authors>
    <author>koipen</author>
</authors>
<contributors>
    <contributor contributaion="XML">Captain_Elliott</contributor>
</contributors>
<teams>
    <team color="blue" max="10" max-overfill="15">Blue Team</team>
    <team color="red" max="10" max-overfill="15">Red Team</team>
</teams>
<kits>
    <kit name="main" force="true">
        <item slot="0">stone sword</item>
        <item slot="1">bow</item>
        <item slot="28" amount="32">arrow</item>
        <item slot="2">stone pickaxe</item>
        <item slot="3" amount="8">wood</item>
        <item slot="8" amount="64">cooked beef</item>
    </kit>
</kits>
<spawns kit="main" safe="true" yaw="-90">
    <spawn team="blue">
        <cuboid min="-12,34,-50" max="-7,34,-45"/>
    </spawn>
    <spawn team="red">
        <cuboid min="-12,34,5" max="-7,34,10"/>
    </spawn>
    <default yaw="90">
        <cuboid min="-35,64,-19" max="-38,64,-21"/>
    </default>
</spawns>
<destroyables material="gold block" completion="100">
    <destroyable owner="red">
        <cuboid min="19,20,14" max="20,23,15"/>
    </destroyable>
    <destroyable owner="blue">
        <cuboid min="20,20,-54" max="19,23,-55"
    </destroyable>
</destroyables>
<regions>
    <cuboid name="playable" min="48,1,-79" max="-22,82,38"/>
    <apply block="deny-all" message="You may not lave the playing field!">
        <negative>
            <reion name="playable"/>
        </negative>
    </apply>
</regions>
<itemremove>
    <item>flint</item>
    <item>coocked beef</item>
</itemremove>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
</toolrepair>
</map>
