<?xml version="1.0"?>
<map proto="1.3.5">
<name>Takeshi's Run</name>
<version>1.0.0</version>
<authors>
    <author>orky48</author>
    <author>_IQ</author>
</authors>
<teams>
    <team max="100" color="dark red">Contestants</team>
</teams>
<kits>
    <kit name="spawn">
        <helmet name="Saftey Helmet" color="993333" locked="true">leather helmet</helmet>
        <chestplate enchantment="protection projectile" locked="true">leather chestplate</chestplate>
        <leggings enchantment="protection projectile" locked="true">leather leggings</leggings>
    </kit>
    <kit name="death">
        <potion duration="1" amplifier="100">harm</potion>
    </kit>
    <kit name="slow" force="true">
        <potion duration="10" amplifier="2">slow</potion>
    </kit>
    <kit name="confusion" force="true">
        <potion duration="10" amplifier="4">confusion</potion>
    </kit>
</kits>
<spawns>
    <spawn team="Contestants" yaw="0">
        <cuboid min="-30,7,-100" max="12,12,-96"/>
    </spawn>
    <default>
        <cuboid min="-10,28,-111" max="-8,29,-109"/>
    </default>
</spawns>
<regions>
    <union name="doors">
        <!-- doors are start to end -->
        <cuboid min="-30,10,-83" max="12,12,-80"/>
        <cuboid min="-30,7,-63" max="12,12,-60"/>
        <cuboid min="-30,7,-43" max="12,12,-40"/>
        <cuboid min="-30,7,-23" max="12,12,-20"/>
        <cuboid min="-30,7,-3" max="12,12,0"/>
    </union>
    <apply kit="confusion">
        <region name="doors"/>
        <filter>
            <random>0.3</random>
        </filter>
    </apply>
    <apply kit="slow">
        <region name="doors"/>
        <filter>
            <random>0.3</random>
        </filter>
    </apply>
    <apply kit="death">
        <region name="doors"/>
        <filter>
            <random>0.1</random>
        </filter>
    </apply>
</regions>
