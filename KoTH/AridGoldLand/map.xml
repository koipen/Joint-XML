<spawns>
	<spawn team="blue" kit="blue" yaw="0">
		<point>-4,50,-105</point>
	</spawn>
	<spawn team="red" kit="red" yaw="180">
		<point>5,50,-148</point>
	</spawn>
	<default yaw="90">
		<cylinder base="136,148,23" radius="2" height="0"/>                                      
	</default>
</spawns>
<king>
	<hills>
		<hill name="Gold Mine" capture-time="10s" points="2" id="main-hill">
			<capture>
				<cylinder base="7,11,21" radius="5" height="2"/>
			</capture>
			<progress>
				<cylinder base="7,11,21" radius="5" height="2"/>
			</progress>
		</hill>
		<hill name="Blue Capture Point" capture-time="5s" potints="1">
			<capture>
				<cylinder base="63,33,-29" radius="5" height="2"/>
			</capture>
			<progress>
				<cylinder base="63,33,-29" radius="5" height="2"/>
			</progress>
			<capture-filter>
				<filter name="only-red-capture"/>
			</capture-filter>
		</hill>
		<hill name="Red Capture Point" capture-time="5s" potints="1">
			<capture>
				<cylinder base="-62,33,72" radius="5" height="2"/>
			</capture>
			<progress>
				<cylinder base="-62,33,72" radius="5" height="2"/>
			</progress>
			<capture-filter>
				<filter name="only-blue-capture"/>
			</capture-filter>
		</hill>
	</hills>                        
</king>
<filters>
	<filter name="only-blue">
		<team>blue</team>
	</filter>
	<filter name="only-red">
		<team>red</team>
	</filter>
	<filter name="only-blue-capture">
		<objective team="blue">main-hill</objective>
	</filter>
	<filter name="only-red-capture">
		<objective team="red">main-hill</objective>
	</filter>
	<filter name="blocks">
		<block>stained glass</block>
	</filter>
</filters>
<regions>
	<rectangle name="all" min="-oo,-oo" max="oo,oo"/>
	<!-- 
		Sperate block filters so player only gets filter message if they try and place a block 
	-->
	<apply block-place="blocks" message="You may only place stained glass">
		<region name="all"/>
	</apply>
	<apply block-break="blocks"> 
		<region name="all"/>
	</apply>
	<apply enter="only-blue" message="You may not enter the enemy teams spawn!">
		<rectangle min="10,-93" max="-10,-115"/>
	</apply>
	<apply enter="only-red" message="You may not enter the enemy teams spawn!">
		<rectangle min="-9,136" max="11,157"/>
	</apply>
</regions>
<killreward>
	<filter>
		<kill-streak count="5"/>
	</filter>
	<kit name="5kills"/>
</killreward>
<killreward>
	<filter>
		<kill-streak count="10"/>
	</filter>
	<kit name="10kills"/>
</killreward>
<killreward>
	<filter>
		<kill-streak count="15"/>
	</filter>
	<kit name="15kills"/>
</killreward>
<killreward>
	<filter>
		<kill-streak count="20"/>
	</filter>
	<kit name="20kills"/>
</killreward>
<itemremove>
	<item>stained glass</item>
	<item>stone sword</item>
	<item>iron sword</item>
	<item>bow</item>
	<item>golden carrot</item>
	<item>chainmail chestplate</item>
	<item>iron boots</item>
	<item>diamond boots</item>
	<item>iron leggings</item>
</itemremove>
</map>
